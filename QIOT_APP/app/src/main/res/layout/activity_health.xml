<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bommason.qiot.qiot.HealthActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:weightSum="1"
            android:background="#ffffff" >

            <SurfaceView
                android:layout_width="63dp"
                android:layout_height="37dp"
                android:id="@+id/sv_title"
                android:background="@drawable/qi_logo2"
                android:layout_marginRight="20dp"
                android:backgroundTint="#ffffff"
                android:clickable="false"
                android:backgroundTintMode="multiply"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="     Your Health"
                android:id="@+id/textView10"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:textIsSelectable="false"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <ToggleButton
                android:layout_width="72dp"
                android:layout_height="35dp"
                android:text="tbtn_start"
                android:id="@+id/tbtn_health"
                android:checked="false"
                android:textOff="Start"
                android:textOn="Stop"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_gravity="center_horizontal"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#bbddff"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:id="@+id/textView11"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heart Rate"
                    android:id="@+id/textView12"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RR interval"
                    android:id="@+id/textView19"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tableRow3"
                android:background="#ffffff"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_time1"
                    android:layout_column="0"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_heart1"
                    android:layout_column="0"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_rr1"
                    android:layout_column="0"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tableRow4"
                android:background="#ffffff"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_time2"
                    android:layout_column="0"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_heart2"
                    android:layout_column="0"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_rr2"
                    android:layout_column="0"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:gravity="center" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tableRow5"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_time3"
                    android:layout_column="0"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_heart3"
                    android:layout_column="0"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_rr3"
                    android:layout_column="0"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:gravity="center" />

            </TableRow>
        </TableLayout>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_graph"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</RelativeLayout>